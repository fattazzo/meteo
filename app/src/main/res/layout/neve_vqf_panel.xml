<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/neve_vqf_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/snow_section_altitude_wind_phenomena_description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.gmail.fattazzo.meteo.utils.ExpandableHeightListView
        android:id="@+id/neve_vqf_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/neve_vqf_description" >

    </com.gmail.fattazzo.meteo.utils.ExpandableHeightListView>

</RelativeLayout>